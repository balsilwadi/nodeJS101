<style>
   
    .header{
       
        padding: 10px 0;
        background-color: rgb(172, 220, 215);
        display: flex;
        flex-direction: column;
        align-items: center;
        position: sticky;
        top: 1px;
        z-index: 1;
        
    }
    .content{
        display: grid;
        grid-gap: 100px 1em;
        grid-template-columns: repeat(3, 1fr);
        align-items: center;
        
    }
    input{
        width: 100%;
        height: 50px;
        font-size:xx-large;
    }
    button{
        width: 100px;
        margin: 5px;
    }
    form{
        width: 50%;
        display: flex;
        flex-direction: column;
        align-items: center;
    }
</style>
<div class="header">
    <a href="http://localhost:5000"><button>HOME</button></a>
    <h1>Random GIFs</h1>
    <h3>Enter a topic and we will give you 6 random GIFs</h3>
    
    <form action="/random">
        <input type="text" name="term">
        <button type="submit">SUBMIT</button>
        
    </form>
     
    {{#if error}}
        <p>{{error}}</p>
    {{/if}}
</div>


<div class="content">
    {{#each GIFs}}
        <div>
            <h2>{{this.content_description}}</h2>
            <div class="tenor-gif-embed" data-postid={{this.id}} data-share-method="host" data-aspect-ratio="1" data-width="100%" ></div> 
        </div>
    {{/each}}
</div>
<script type="text/javascript" async src="https://tenor.com/embed.js"></script>
